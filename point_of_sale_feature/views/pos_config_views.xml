<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_configuration_form" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.discount</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='other_devices']" position="after">
                <setting id="pos_category_wise_discount">
                    <field name="pos_category_discount_enable"/>
                    <div class="text-muted">
                        Discount for orders based on category wise discount
                    </div>
                    <div class="content-group mt16">
                        <field name="pos_categories_discount_ids" string="Category">
                            <list editable="bottom">
                                <field name="category_id" domain="[('id','in',allowed_categories_ids)]"/>
                                <field name="pos_category_discount"/>
                                <control>
                                    <create name="add_product_control" string="Add property"/>
                                </control>
                            </list>
                        </field>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
