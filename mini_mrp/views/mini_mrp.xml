<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mini_mrp_view_list" model="ir.ui.view">
        <field name="name">mini.mrp.view.list</field>
        <field name="model">mini.mrp</field>
        <field name="arch" type="xml">
            <list>
                <field name="product"/>
                <field name="product_qty"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="states"/>
            </list>
        </field>
    </record>

    <record id="mini_mrp_view_form" model="ir.ui.view">
        <field name="name">mini.mrp.view.form</field>
        <field name="model">mini.mrp</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_to_confirm" type="object" string="Confirm" invisible="states != 'draft'"/>
                    <button name="action_produce" type="object" string="Produce" invisible="states != 'confirmed'"/>
                    <field name="states" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="product"/>
                            <field name="product_qty"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                                        <notebook>
                                            <page string="Mrp Lines">
                                                <field name="mrp_lines_ids">
                                                    <list>
                                                        <field name="product"/>
                                                        <field name="qty_product"/>
<!--                                                        <field name="location_id"/>-->
                                                    </list>
                                                </field>
                                            </page>
                                        </notebook>
                    <!--                    <notebook>-->
                    <!--                        <page string="List view" invisible="type != 'revenue_wise'">-->
                    <!--                            <field name="product_line_ids">-->
                    <!--                                <list>-->
                    <!--                                    <field name="commission_type"/>-->
                    <!--                                    <field name="straight_commission"/>-->
                    <!--                                </list>-->
                    <!--                            </field>-->
                    <!--                        </page>-->
                    <!--                    </notebook>-->
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mini_mrp_view_form" model="ir.actions.act_window">
        <field name="name">Mini Mrp</field>
        <field name="res_model">mini.mrp</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="mini_mrp_view_list"/>
    </record>
</odoo>
