<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_commission_view_list" model="ir.ui.view">
        <field name="name">crm.commission.view.list</field>
        <field name="model">crm.commission</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
                <field name="from_date"/>
                <field name="to_date"/>
            </list>
        </field>
    </record>

    <record id="crm_commission_view_form" model="ir.ui.view">
        <field name="name">crm.commission.view.form</field>
        <field name="model">crm.commission</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name">Name</field>
                            <field name="active">Active</field>
                            <field name="type">Type</field>
                        </group>
                        <group>
                            <field name="from_date">From Date</field>
                            <field name="to_date">To Date</field>
                            <field name="sale_person"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="List view" invisible="type != 'product_wise'">
                            <field name="product_line_ids">
                                <list>
                                    <field name="product_id"/>
                                    <field name="product_commission"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <notebook>
                        <page string="List view" invisible="type != 'revenue_wise'">
                            <field name="product_line_ids">
                                <list>
                                    <field name="commission_type"/>
                                    <field name="straight_commission"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_crm_commission_view_form" model="ir.actions.act_window">
        <field name="name">Crm Commission</field>
        <field name="res_model">crm.commission</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="crm_commission_view_list"/>
    </record>

    <menuitem id="menu_crm_commission_line_custom"
              name="Crm Commission"
              parent="sale.sale_menu_root"
              sequence="40"
              action="action_crm_commission_view_form"/>
</odoo>
