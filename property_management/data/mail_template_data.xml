<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="email_template_lease_expiry" model="mail.template">
        <field name="name">Lease Expiry Notification</field>
        <field name="model_id" ref="property_management.model_property_rental_lease"/>
        <field name="subject">Lease Expiry Notice - {{ object.name }}</field>
        <field name="email_to">{{ object.tenant_id.email }}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 20px;">
                <p>Dear <t t-out="object.tenant_id.name"/>,
                </p>
                <p>This is to inform you that your lease agreement is expired.</p>
                <p>Your rental
                    <t t-out="object.name"/>
                    starting from
                    <t t-out="object.start_date"/>
                    to
                    <t t-out="object.end_date"/>
                    amounting in
                    <t t-out="object.price"/>
                    has been expired.
                </p>
                <p>Do not hesitate to contact us if you have any questions.</p>
                <p>Thank you,
                    <br/>
                    <t t-out="user.name"/>
                </p>
            </div>
        </field>
    </record>

