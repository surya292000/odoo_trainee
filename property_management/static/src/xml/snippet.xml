<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="property_management.category_data">
        <section class="categories_section">
        <div class="container">
        <div id="TopuniqueId" class="large-12 columns">
        <div id="bestSellCarousel" class="owl-carousel owl-theme owl-loaded owl-drag">
        <h3 class="section_heading">Shop by Categories</h3>
            <div class="categories_wrapper">
            <div class="owl-stage-outer">

                <t t-foreach="result.categories" t-as="category" t-key="category.id">
<!--                    <div class="row">-->
                    <div class="row">
                    <div class="categories">
                        <div class="img_wrapper">
                                <t t-if="category.property_image">
                                    <a class="o_carousel_product_img_link o_dynamic_product_hovered stretched-link"
                                           t-attf-href="/property/details/#{category.id}">
                                        <img class="card-img-top o_img_product_square o_img_product_cover h-auto"
                                             t-att-src="'data:image/png;base64,' + category.property_image"
                                             style="width:200px; height:200px; object-fit:cover; border-radius:8px;"
                                             t-att-alt="category.name or 'Category Image'"
                                             loading="lazy"/>
                                    </a>
                                </t>

                                <t t-else="">
                                    <img src="property_management/static/image/Home.jpg"
                                         style="width:200px; height:200px; object-fit:cover; border-radius:8px;"
                                         class="rotate-center"
                                         alt="Default Property Image"
                                         loading="lazy"/>
                                </t>
                            </div>
                        <div class="type">
                            <t t-esc="category.name"/>
                        </div>

                        </div>
                        </div>
<!--                    </div>-->
                </t>
                </div>
        </div>
        </div>
        </div>
        </div>
<!--        </div>-->
        </section>
        </t>
        </templates>
