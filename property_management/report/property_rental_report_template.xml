<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="property_rental_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 style="font-size:55px">Property Report</h2>
                    <t t-if="single_tenant">
                        <h3 style="font-size:40px">Tenant: <t t-esc="tenant_name"/></h3>
                        <br/>
                    </t>

                    <table class="o_has_total_table table o_main_table table-borderless">
                        <thead t-attf-style="font-size: 24px">
                            <tr>
                                <th>Rental Lease Id</th>
                                <t t-if="not single_tenant">
                                    <th>Tenant</th>
                                </t>
                                <th>Type</th>
                                <th>Property</th>
                                <th>Owner</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Amount</th>
                                <th>State</th>
                            </tr>
                        </thead>
                        <tbody t-attf-style="font-size: 24px">
                            <t t-foreach="data" t-as="line">
                                <tr>
                                    <td><span t-esc="line['rental_lease_id']"/></td>
                                    <t t-if="not single_tenant">
                                        <td><span t-esc="line['tenant_name']"/></td>
                                    </t>
                                    <td><span t-esc="line['type']"/></td>
                                    <td><span t-esc="line['property']"/></td>
                                    <td><span t-esc="line['owner_name']"/></td>
                                    <td><span t-esc="line['start_date']"/></td>
                                    <td><span t-esc="line['end_date']"/></td>
                                    <td><span t-field="currency_id.symbol" /><span t-esc="line['amount']"/></td>
                                    <td><span t-esc="line['state']"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
