<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_property_breadcrumbs" inherit_id="portal.portal_breadcrumbs" priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'property'" t-attf-class="breadcrumb-item #{'active ' if property else ''}">
                <a t-if="property" t-attf-href="/property?{{ keep_query() }}">Property Records</a>
                <t t-else="">Property Records</t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_menu_property" inherit_id="portal.portal_my_home" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
        </xpath>
        <div id="portal_client_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/property_management/static/image/property.svg'"/>
                <t t-set="title">Property Records</t>
                <t t-set="url" t-value="'/property'"/>
                <t t-set="text">View your property rental records</t>
                <t t-set="placeholder_count" t-value="'portal_property'"/>
            </t>
        </div>
    </template>

    <!-- Property List View -->
    <template id="portal_my_home_property_views" name="My Property Records">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Property Records</t>
            </t>
            <t t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="text-left">Invoice Number</th>
                        <th class="text-center">Property</th>
                        <th class="text-center">Start Date</th>
                        <th class="text-center">End Date</th>
                        <th class="text-end">Rental Type</th>
                    </tr>
                </thead>
                <t t-foreach="property" t-as="record">
                    <tr>
                        <td>
                            <a t-att-href="record.get_portal_url()">
                                <t t-out="record.name"/>
                            </a>
                        </td>
                        <td class='text-left'>
                            <t t-foreach="record.property_ids" t-as="line">
                                <span t-field="line.property_id"/>
                                <br/>
                            </t>
                        </td>

                        <td class='text-center'>
                            <span t-field="record.start_date"/>
                        </td>
                        <td class='text-center'>
                            <span t-field="record.end_date"/>
                        </td>
                        <td class='text-end'>
                            <span t-field="record.rental_type"/>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

<!--     template for property order form view-->

    <template id="property_order_portal_template"
              name="Property Order Portal"
              inherit_id="portal.portal_sidebar"
              primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="before">
            <div class="o_portal_breadcrumbs mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a t-att-href="'/my'">My Account</a>
                    </li>
                    <!-- Property Orders list -->
                    <li class="breadcrumb-item">
                        <a t-att-href="'/property'">My Properties</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <t t-esc="order.name"/>
                    </li>
                </ol>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="row o_portal_sale_sidebar">
                <div class="col-12">
                    <h2>Property Order - <t t-esc="order.name"/></h2>
                    <table class="table table-sm" id="properties_order_table">
                        <thead>
                            <tr>
                                <th>Property</th>
                                <th>Tenant</th>
                                <th class="text-end">Quantity</th>
                                <th class="text-end">Amount</th>
                                <th class="text-end">Sub-Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="order.property_ids" t-as="line">
                                <tr>
                                    <td><span t-field="line.property_id.name"/></td>
                                    <td>
                                        <t t-esc="line.rental_id.tenant_id.name if line.rental_id.tenant_id else ''"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.amount"/>
                                    </td>
                                    <td class="text-end">
                                        <t t-esc="line.amount * line.quantity"/>
                                    </td>
                                </tr>
                            </t>
                            <tr class="is-subtotal text-end">
                                <td colspan="99">
                                    <strong>Total</strong>
                                    <span t-out="order.total_amount"
                                          t-options='{"widget": "monetary", "display_currency": order.company_id.currency_id}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
