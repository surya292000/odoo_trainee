<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_property_breadcrumbs" inherit_id="portal.portal_breadcrumbs" priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'property'" t-attf-class="breadcrumb-item #{'active ' if property else ''}">
                <a t-if="property" t-attf-href="/property?{{ keep_query() }}">Property Records</a>
                <t t-else="">Property Records</t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_menu_property" inherit_id="portal.portal_my_home" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
        </xpath>
        <div id="portal_client_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/property_management/static/image/property.svg'"/>
                <t t-set="title">Property Records</t>
                <t t-set="url" t-value="'/property'"/>
                <t t-set="text">View your property rental records</t>
                <t t-set="placeholder_count" t-value="'portal_property'"/>
            </t>
        </div>
    </template>
<!--    <template id="property_portal_add_notes"-->
