<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="property_facilities_view_list" model="ir.ui.view">
        <field name="name">property.facilities.view.list</field>
        <field name="model">property.facility</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

        <record id="property_facilities_view_form" model="ir.ui.view">
        <field name="name">property.facilities.view.form</field>
        <field name="model">property.facility</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>

     <record id="property_facilities_action" model="ir.actions.act_window">
        <field name="name">property.facility</field>
        <field name="res_model">property.facility</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">empty</p>
        </field>
    </record>
</odoo>
