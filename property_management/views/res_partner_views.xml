<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_property_view_form" model="ir.ui.view">
        <field name="name">res.partner.property.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook>
                <page string="Owned Property">
                    <field name="owned_property_ids" readonly="1">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="states"/>
                        </list>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
    <record id="res_partner_property" model="ir.actions.act_window">
        <field name="name"> Res Partner Property</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>
