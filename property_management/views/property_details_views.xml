<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="property_details_view_list" model="ir.ui.view">
        <field name="name">property.details.view.list</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="legal_amount"/>
            </list>
        </field>
    </record>

    <record id="property_details_view_form" model="ir.ui.view">
        <field name="name">property.details.view.form</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="states" widget="statusbar" statusbar_visible="Rented,Leased,Sold,Draft"/>
                </header>
                <sheet>
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button"
                                type="object"
                                icon="fa-building"
                                name="action_get_rent_count">
                            <field name="name" string="Rent/Lease Records" readonly="1"/>
                        </button>
                    </div>
                    <group>
                        <field name="name" style="font-size:30px;" nolabel="1"/>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" placeholder="State" class="o_address_state"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"/>
                            </div>
                            <field name="owner_id"/>
                            <field name="can_be_sold"/>
                        </group>
                        <group>
                            <div class="oe_title">
                                <h1>
                                    <field name="property_image" class="oe_avatar" widget="image" nolabel="1"/>
                                </h1>
                            </div>
                            <field name="facilities_ids" widget="many2many_tags"
                                   style="padding-bottom: 20px"/>
                            <field name="legal_amount"/>
                            <field name="built_date"/>
                            <field name="rent"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                    <chatter>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </chatter>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_details_view_search" model="ir.ui.view">
        <field name="name">property.details.view.search</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <filter string="Archived" name="inactive" domain="[('can_be_sold', '=', True)]"/>
                <group expand="1" string="Group By">
                    <filter string="can be sold" name="can_be_sold"
                            context="{'group_by':'can_be_sold', 'residual_visible':True}"/>
                    <filter string="Country" name="country"
                            context="{'group_by':'country_id', 'residual_visible':True}"/>
                    <filter string="State" name="state" context="{'group_by':'state_id', 'residual_visible':True}"/>
                    <filter string="City" name="city" context="{'group_by':'city', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="property_details_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property.details</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[Command.clear(),
            Command.create({'view_mode': 'list', 'sequence': 1, 'view_id': ref('property_details_view_list')}),
            Command.create({'view_mode': 'form', 'sequence': 2, 'view_id': ref('property_details_view_form')}),
        ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">empty</p>
        </field>
    </record>
</odoo>
