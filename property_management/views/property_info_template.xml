<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="property_info_template" name="Property Info Page">
        <t t-call="website.layout">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-4 d-flex justify-content-center">
                        <img t-att-src="'/web/image/property.details/' + str(property.id) + '/property_image'"
                             class="img-fluid rounded shadow"
                             style="width:100%; height:250px; object-fit:cover; border-radius:8px;"/>
                    </div>
                    <div class="col-md-4">
                        <h2><t t-esc="property.name"/></h2>
                        <p><strong>Owner:</strong> <t t-esc="property.owner_id.name or 'N/A'"/></p>
                        <p><strong>Legal Amount:</strong> <t t-esc="property.legal_amount"/></p>
                        <p><strong>Rent:</strong> <t t-esc="property.rent"/></p>
                    </div>
                    <div class="col-md-4">
                        <p><strong>Status:</strong> <t t-esc="property.states"/></p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
