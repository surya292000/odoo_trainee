<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rent_lease_report_wizard_form_view" model="ir.ui.view">
        <field name="name">rent.lease.report.wizard.form.view</field>
        <field name="model">rent.lease.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Rent/Lease Report">
                <group>
                     <field name="owner_id"/>
                    <field name="tenant_ids" widget="many2many_tags"/>
                    <field name="rental_type"/>
                    <field name="property_ids" widget="many2many_tags"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                </group>
                <footer>
                    <button string="Print Report" type="object" name="action_print_report" class="btn-primary"/>
                    <button string="Print XLSX" type="object" name="action_print_xlsx" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_property_report_wizard" model="ir.actions.act_window">
        <field name="name">Property Wizard</field>
        <field name="res_model">rent.lease.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="rent_lease_report_wizard_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>
