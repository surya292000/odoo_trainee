<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form -->
    <record id="view_sale_order_from_lines_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.from.lines.wizard.form</field>
        <field name="model">sale.order.from.lines.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Sale Order from Lines">
                <group>
                    <field name="partner_id"/>
                    <field name="pricelist_id" readonly="1"/>
                    <field name="invoice_address_id" readonly="1"/>
                    <field name="delivery_address_id" readonly="1"/>
                </group>
                <separator string="Selected Lines"/>
                <field name="line_ids" widget="many2many_tags"/>
                <footer>
                    <button string="Create Sale Order" type="object"
                            name="action_create_sale_order" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_sale_order_from_lines_wizard" model="ir.actions.act_window">
        <field name="name">Create Sale Order</field>
        <field name="res_model">sale.order.from.lines.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_line_ids': [(6,0,active_ids)]}</field>
        <field name="binding_model_id" ref="sale.model_sale_order_line"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
