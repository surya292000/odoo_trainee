<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Sale Order Lines -->
    <record id="view_sale_order_line_list_custom" model="ir.ui.view">
        <field name="name">sale.order.line.list.custom</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <list string="Sale Order Lines" multi_edit="True">
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="price_unit"/>
                <field name="price_subtotal"/>
            </list>
        </field>
    </record>

    <!-- Action to open Sale Order Lines -->
    <record id="action_sale_order_line_list" model="ir.actions.act_window">
        <field name="name">Sale Order Lines</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_sale_order_line_list_custom"/>
    </record>

    <!-- Menu item -->
    <menuitem id="menu_sale_order_line_custom"
              name="Sale Order Lines"
              parent="sale.sale_menu_root"
              action="action_sale_order_line_list"/>
</odoo>
