<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="example_tag_view_form" model="ir.ui.view">
        <field name="name">example.tag.view.form</field>
        <field name="model">example.tag</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. New"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" required="True" widget="color_picker"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="example_tag_view_list" model="ir.ui.view">
        <field name="name">example.tag.view.list</field>
        <field name="model">example.tag</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <record id="action_example_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">example.tag</field>
        <field name="view_id" ref="example_tag_view_list"/>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Tag
            </p>
        </field>
    </record>

</odoo>