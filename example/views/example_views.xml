<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="example_view_form" model="ir.ui.view">
        <field name="name">example.view.form</field>
        <field name="model">example</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_test" type="object" string="Test"/>
                </header>
                <sheet>
                    <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="example_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <notebook>
                        <page string="Example">
                            <field name="example_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="price"/>
                                    <field name="sub_total"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

      <record id="action_example" model="ir.actions.act_window">
        <field name="name">Example</field>
        <field name="res_model">example</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face"></p>
        </field>
    </record>
</odoo>
