<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_request_wizard_form_view" model="ir.ui.view">
        <field name="name">product.request.wizard.form.view</field>
        <field name="model">product.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Request">
                <group>
                     <field name="product"/>
                    <field name="selling_price"/>
                    <field name="cost_price"/>
                </group>
                <footer>
                    <button string="Request" type="object" name="action_to_submit_request" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_property_report_wizard" model="ir.actions.act_window">
        <field name="name">Request Wizard</field>
        <field name="res_model">product.request.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_request_wizard_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>
