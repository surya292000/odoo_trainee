<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_product_approval_list" model="ir.ui.view">
        <field name="name">product.product.approval.list</field>
        <field name="model">product.product</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Products to Approve">
                <field name="default_code"/>
                <field name="name"/>
                <field name="is_new_product"/>
                <field name="active"/>
                <field name="lst_price"/>
                <field name="standard_price"/>
            </list>
        </field>
    </record>

    <record id="action_pending_products" model="ir.actions.act_window">
        <field name="name">Products to Approve</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_new_product', '=', True), ('active', '=', False)]</field>
        <field name="view_id" ref="view_product_product_approval_list"/>
    </record>

    <menuitem id="menu_products_to_approve"
              name="Products to Approve"
              action="action_pending_products"
              parent ="stock.menu_stock_inventory_control"
              sequence="25"
              groups="base.group_erp_manager"/>
</odoo>
