<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="material_request_view_list" model="ir.ui.view">
        <field name="name">material.request.view.list</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_needed"/>
            </list>
        </field>
    </record>

    <record id="material_request_view_form" model="ir.ui.view">
        <field name="name">material.request.view.form</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="states" widget="statusbar"
                           statusbar_visible="draft,submit,approved_by_manager,approved_by_head,rejected"/>
                    <button name="action_do_draft" type="object" string="Draft"
                            invisible="states == 'draft' or states =='approved_by_head' or states =='rejected'"
                            groups="material_request.group_material_request_employee"/>
                    <button name="action_do_submit" type="object" string="Submit"
                            invisible="states != 'draft'" class="btn-primary"
                            groups="material_request.group_material_request_employee"/>
                    <button name="action_do_approve_by_manager" type="object" string="Approve"
                            groups="material_request.group_material_request_manager"
                            invisible="states == 'approved_by_manager' or states =='approved_by_head' or states =='rejected'"
                            class="btn-primary"/>
                    <button name="action_do_approve_by_head" type="object" string="Approve"
                            groups="material_request.group_material_request_head"
                            invisible="states =='approved_by_head' or states =='rejected'" class="btn-primary"/>
                    <button name="action_do_reject" type="object" string="Reject"
                            groups="material_request.group_material_request_head" invisible="states == 'rejected'"/>
                </header>
                <sheet>
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" name="action_to_view_po" icon="fa-file-text-o"
                                string="RFQ">
                            <field string="RFQ" name="po_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_to_view_int" icon="fa-file-text-o"
                                string="RFQ">
                            <field string="Internal Transfer" name="int_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="date_needed"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="material_line_ids">
                                <list editable="bottom">
                                    <field name="component_id"/>
                                    <field name="quantity" readonly="0"/>
                                    <field name="request_type"/>
                                    <field name="vendor_ids" readonly="0" widget="many2many_tags"/>
                                    <field name="src_location_id"/>
                                    <field name="dest_location_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="material_request_action" model="ir.actions.act_window">
        <field name="name">Material Request</field>
        <field name="res_model">material.request</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">empty</p>
        </field>
    </record>
</odoo>
