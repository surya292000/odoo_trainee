<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="Orderline" t-inherit="point_of_sale.Orderline"
       t-inherit-mode="extension">
        <xpath expr="//li[hasclass('orderline')]//ul[hasclass('info-list')]" position="inside">
            <li class="product-owner">
                <t t-if="line.product_owner_id">
                    <b>Product Owner:</b>
                    <t t-esc="line.product_owner_id"/>
                </t>
            </li>
        </xpath>
	</t>
</templates>
