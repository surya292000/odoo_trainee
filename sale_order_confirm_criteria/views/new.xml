<odoo>
    <data>
        <!-- Inherit the product.template form view -->
        <record id="product_template_view_form_approval" model="ir.ui.view">
            <field name="name">product.template.view.form.approval</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_approve_product" string="Approve Product" type="object"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"
                            groups="base.group_erp_manager"/>
                    <button name="action_reject_product" string="Reject Product" type="object"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"
                            groups="base.group_erp_manager"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="state" widget="statusbar" readonly="1"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_view_approval" type="object"
                            icon="fa-check-square-o"
                            attrs="{'invisible': [('approval_request_id', '=', False)]}">
                        <field name="approval_request_id" widget="statinfo" string="Approval"/>
                    </button>
                </xpath>
            </field>
        </record>

        <!-- Add a menu item to view all pending approval requests (optional) -->
        <menuitem id="menu_product_approval_requests"
                  name="Product Approvals"
                  parent="product.menu_product_template_config_menu"
                  action="action_product_approval_requests"
                  sequence="100"
                  groups="base.group_erp_manager"/>

        <!-- Action for the new menu item (optional) -->
        <record id="action_product_approval_requests" model="ir.actions.act_window">
            <field name="name">Product Approval Requests</field>
            <field name="res_model">product.approval</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'pending')]</field>
        </record>
    </data>
</odoo>
