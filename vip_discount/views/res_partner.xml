<odoo>
    <record id="view_partner_form_inherit_vip_customer" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.vip.customer</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="is_vip"/>
                <field name="vip_discount" invisible="is_vip == False"/>
            </field>
        </field>
    </record>
</odoo>