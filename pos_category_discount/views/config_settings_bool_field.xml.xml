<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_pos_config_discount_settings" model="ir.ui.view">
        <field name="name">res.config.settings.view.inherit.pos.discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_pricing_section']" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_discount_control"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_discount_control"/>
                            <div class="text-muted">
                               Maximum Discount limit allowed in PoS
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>