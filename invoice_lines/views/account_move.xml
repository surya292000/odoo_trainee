<odoo>
    <record id="view_move_form_inherit_custom_tab" model="ir.ui.view">
        <field name="name">account.move.form.inherit.custom.tab</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Customer Top Invoice Lines">
                    <field name="customer_top_lines_ids">
                        <list>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="price_unit"/>
                            <field name="tax_ids"/>
                            <field name="price_subtotal"/>
                            <button name="action_add_invoice_line" type="object" string="Add"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
