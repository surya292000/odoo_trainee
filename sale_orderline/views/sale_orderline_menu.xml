<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="orderline_menu_action" model="ir.actions.act_window">
        <field name="name">Create Order Menu</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">list</field>
        <field name="target">new</field>
    </record>

    <record id="sale_order_line_list_view" model="ir.ui.view">
        <field name="name">Sale Order Line List</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="price_unit"/>
            </list>
        </field>
    </record>

    <record id="sale_order_line_form_view" model="ir.ui.view">
        <field name="name">sale.order.line.form</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form string="Sale Order Line">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="product_uom_qty"/>
                        <field name="price_unit"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="create_order_menu" name="Order Lines"
              parent="sale.sale_menu_root" sequence="11" action="sale_orderline.orderline_menu_action"/>
</odoo>
